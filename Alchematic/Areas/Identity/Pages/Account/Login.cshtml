@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="text-center">
    <h3 class="display-4"><b>Alchemative</b></h3>
    <br>
</div>
<div @*class="row"*@>
    <div @*class="col-md-4"*@>
        <section>
            <form id="account" method="post">
                <div class="box">
                    <h4>Sign In</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email"  class="form-control" placeholder="Your Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password"  class="form-control" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit"  class="mbtn ">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a class="fp" id="forgot-password" asp-page="./ForgotPassword">Forgot Password</a>
                        </p>
                        <p>Don't Have An Account 
                            <a class="fp" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up </a>Now
                        </p>
                        <p>
                            @*<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>*@
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
